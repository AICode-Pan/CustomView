<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--飘心-->
    <declare-styleable name="HeartLayout">
        <attr name="initX" format="dimension"/>
        <attr name="initY" format="dimension"/>
        <attr name="xRand" format="dimension"/>
        <attr name="animLengthRand" format="dimension"/>
        <attr name="xPointFactor" format="dimension"/>
        <attr name="animLength" format="dimension"/>
        <attr name="heart_width" format="dimension"/>
        <attr name="heart_height" format="dimension"/>
        <attr name="bezierFactor" format="integer"/>
        <attr name="anim_duration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="IndicatorView">
        <attr name="indicatorRadius" format="dimension" />
        <attr name="indicatorSpace" format="dimension" />
        <attr name="indicatorSelectWidth" format="dimension" />
        <attr name="indicatorSelectColor" format="color" />
        <attr name="indicatorColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SlideSelectView">
        <attr name="circleCount" format="integer" />
        <attr name="lineColor" format="color" />
        <attr name="lineStrokeWidth" format="dimension" />
        <attr name="smallCircleColor" format="color" />
        <attr name="smallCircleRadius" format="dimension" />
        <attr name="bigCircleColor" format="color" />
        <attr name="bigCircleRadius" format="dimension" />
        <attr name="bigCenterColor" format="color" />
        <attr name="bigCenterRadius" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSelectColor" format="color" />
        <attr name="textTopMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BlurView">
        <attr name="circleRadius" format="dimension" />
        <attr name="downScale" format="float" />
        <attr name="maskColor" format="color" />
        <attr name="blurRadius" format="float" />
    </declare-styleable>
</resources>